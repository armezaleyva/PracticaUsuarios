<UserControl x:Class="PracticaUsuarios.ControlMaestro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaUsuarios"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Margin="8,8,8,0" Name="lblNombreMaestro">Nombre:</TextBlock>
        <TextBox Margin="8,8,8,0" Name="txtNombreMaestro"></TextBox>
        <TextBlock Margin="8,8,8,0" Name="lblTelefonoMaestro">Teléfono:</TextBlock>
        <TextBox Margin="8,8,8,0" Name="txtTelefonoMaestro"></TextBox>
        <TextBlock Margin="8,8,8,0" Name="lblCedulaMaestro">Cédula Profesional:</TextBlock>
        <TextBox Margin="8,8,8,0" Name="txtCedulaMaestro"></TextBox>
        <TextBlock Margin="8,8,8,0" Name="lblCarreraMaestro">Carrera Estudiada:</TextBlock>
        <TextBox Margin="8,8,8,0" Name="txtCarreraMaestro"></TextBox>
    </StackPanel>
</UserControl>
